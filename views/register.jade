extends layout

block content
  .register-container
    p To use without registering: just hit the "Submit" button
    h1 Register 
    
  
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Enter Username', value='Demo')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password', value='Password')
      button.btn.btn-primary(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") Cancel