extends layout

block content
  .league-container
    h1 #{league_name}

  .league-container
    form(role='form', action="",method="post")
      .form-group
        input.form-control(type='text', name="teamname", placeholder='Create Team', leagueId='#{leagueId}')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel

    
  button.btn.btn-default.schedule(type='submit') Start League
      
        
  .teams-table
    table
      thead
        tr: th Teams
      tbody
        each team in teams
          tr
            td 
              a(href="/team/"+team._id) #{team.teamname} 
              i #{team.teamOwner}
  ul.schedule-container
    each week in schedule
      li Week: #{week.week}
      ul
        each game in week.games
          li 
            p Game Number: #{game.gamenum}
            each matchup in game.matchups 
              i #{matchup.team.teamname} #{matchup.team.score}
      
 