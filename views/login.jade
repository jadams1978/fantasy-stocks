extends layout

block content
  .login-container
    h1 Login 

    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username',value='Demo')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password', value='Password')
      button.btn.btn-primary(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") Cancel