extends layout

block content
  .login-container
    h1 Login to Mock Stock

    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', value="poop" name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', value="poop" name="password", placeholder='Password')
      button.btn.btn-primary(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-default(type="button") Cancel